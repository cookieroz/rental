<h1>Listing destinations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Info</th>
    <th>Todo</th>
    <th>Airport</th>
    <th>Rentcar</th>
    <th>Weather</th>
    <th>Lat</th>
    <th>Lng</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @destinations.each do |destination| %>
  <tr>
    <td><%= destination.name %></td>
    <td><%= raw strip_tags(destination.info) %></td>
    <td><%= raw strip_tags(destination.todo) %></td>
    <td><%= raw strip_tags(destination.airport) %></td>
    <td><%= raw strip_tags(destination.rentcar) %></td>
    <td><%= raw strip_tags(destination.weather) %></td>
    <td><%= destination.latitude %></td>
    <td><%= destination.longitude %></td>
    <td><%= link_to 'Show', destination %></td>
    <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
    <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

