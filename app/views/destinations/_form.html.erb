<%= simple_form_for @destination,
                    :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs control-group">
      <%= f.input :name %>
      <%= f.input :latitude %>
      <%= f.input :longitude %>
      <%= f.input :info, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
      <%= f.input :todo, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
      <%= f.input :airport, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
      <%= f.input :rentcar, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
      <%= f.input :weather, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
